<Window x:Class="Project_Cactus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Cactus"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="750" MinWidth="400" MinHeight="400">
    <Window.CommandBindings>
    </Window.CommandBindings>
    <Grid x:Name="ticketLoggingWindowGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="0.7*"/>
            <RowDefinition x:Name="smallScreenTroubleshootingDetailsRow" Height="*"/>
            <RowDefinition Height="42"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition x:Name="bigScreenSecondPageColumn" Width="0"/>
        </Grid.ColumnDefinitions>

        <Grid x:Name="environmentalInfoGrid" Grid.Row="0" Grid.Column="0" Margin="0,10,10,0" HorizontalAlignment="Stretch" Height="auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="114"/>
                <ColumnDefinition Width="88*"/>
                <ColumnDefinition Width="87*"/>
                <ColumnDefinition Width="91"/>
                <ColumnDefinition Width="92*"/>
            </Grid.ColumnDefinitions>

            <Label Content="Environmental Information" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Grid.ColumnSpan="5" Width="729" FontWeight="Bold"/>

            <Label x:Name="actVersion_Label" Grid.Column="0" Content="Act! Version:" HorizontalAlignment="Stretch" Margin="10,27,0,0" VerticalAlignment="Top" Height="26"/>
            <ComboBox x:Name="actVersionNumber_ComboBox" Grid.Column="1" HorizontalAlignment="Stretch" Margin="10,29,0,0" VerticalAlignment="Top" Width="auto" SelectedItem="{Binding actVersionNumber_Selected}" Height="22">
                <ComboBoxItem Content="v19.1" Selected="actVersionNumber_NotOtherSelected"/>
                <ComboBoxItem Content="v19.0" Selected="actVersionNumber_NotOtherSelected"/>
                <ComboBoxItem Content="v18.2" Selected="actVersionNumber_NotOtherSelected"/>
                <ComboBoxItem Content="v18.1" Selected="actVersionNumber_NotOtherSelected"/>
                <ComboBoxItem Content="v18.0" Selected="actVersionNumber_NotOtherSelected"/>
                <ComboBoxItem Content="v17.2" Selected="actVersionNumber_NotOtherSelected"/>
                <ComboBoxItem Content="v17.1" Selected="actVersionNumber_NotOtherSelected"/>
                <ComboBoxItem Content="v17.0" Selected="actVersionNumber_NotOtherSelected"/>
                <ComboBoxItem Content="v16.3" Selected="actVersionNumber_NotOtherSelected"/>
                <ComboBoxItem Content="v16.2" Selected="actVersionNumber_NotOtherSelected"/>
                <ComboBoxItem Content="v16.1" Selected="actVersionNumber_NotOtherSelected"/>
                <ComboBoxItem Content="v16.0" Selected="actVersionNumber_NotOtherSelected"/>
                <ComboBoxItem Content="v15.1" Selected="actVersionNumber_NotOtherSelected"/>
                <ComboBoxItem Content="v15.0" Selected="actVersionNumber_NotOtherSelected"/>
                <ComboBoxItem Content="v14.2" Selected="actVersionNumber_NotOtherSelected"/>
                <ComboBoxItem Content="v14.1" Selected="actVersionNumber_NotOtherSelected"/>
                <ComboBoxItem Content="v14.0" Selected="actVersionNumber_NotOtherSelected"/>
                <ComboBoxItem Content="v13.1" Selected="actVersionNumber_NotOtherSelected"/>
                <ComboBoxItem Content="v13.0" Selected="actVersionNumber_NotOtherSelected"/>
                <ComboBoxItem Content="v12.2" Selected="actVersionNumber_NotOtherSelected"/>
                <ComboBoxItem Content="v12.1" Selected="actVersionNumber_NotOtherSelected"/>
                <ComboBoxItem Content="v12.0" Selected="actVersionNumber_NotOtherSelected"/>
                <ComboBoxItem Content="N/A" Selected="actVersionNumber_NotOtherSelected"/>
                <ComboBoxItem Content="Other" Selected="actVersionNumber_OtherSelected"/>
            </ComboBox>
            <TextBox x:Name="actVersion_TextBox" Grid.Column="2" HorizontalAlignment="Stretch" Height="23" Margin="10,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="auto" IsEnabled="False"/>
            <Label x:Name="actVersionProductArea_Label" Grid.Column="3" Content="Product Area:" HorizontalAlignment="Stretch" Margin="10,27,0,0" VerticalAlignment="Top" Height="26"/>
            <ComboBox x:Name="actVersionType_ComboBox" Grid.Column="4" HorizontalAlignment="Stretch" Margin="10,29,0,0" VerticalAlignment="Top" Width="auto" Height="22">
                <ComboBoxItem Content="Pro"/>
                <ComboBoxItem Content="Premium"/>
                <ComboBoxItem Content="Premium for Web"/>
                <ComboBoxItem Content="Premium Cloud"/>
                <ComboBoxItem Content="Act! Emarketing"/>
                <ComboBoxItem Content="Swiftpage Emarketing"/>
                <ComboBoxItem Content="N/A"/>
            </ComboBox>

            <Label x:Name="officeVersion_Label" Grid.Column="0" Content="Office Version:" HorizontalAlignment="Stretch" Margin="10,54,0,0" VerticalAlignment="Top" Height="26"/>
            <ComboBox x:Name="officeVersion_ComboBox" Grid.Column="1" HorizontalAlignment="Stretch" Margin="10,56,0,0" VerticalAlignment="Top" Width="auto" Height="22">
                <ComboBoxItem Content="Office 2016" Selected="officeVersion_NotOtherSelected"/>
                <ComboBoxItem Content="Office 2016 (Click to Run)" Selected="officeVersion_NotOtherSelected"/>
                <ComboBoxItem Content="Office 2013" Selected="officeVersion_NotOtherSelected"/>
                <ComboBoxItem Content="Office 2013 (Click to Run)" Selected="officeVersion_NotOtherSelected"/>
                <ComboBoxItem Content="Office 2010" Selected="officeVersion_NotOtherSelected"/>
                <ComboBoxItem Content="Office 2007" Selected="officeVersion_NotOtherSelected"/>
                <ComboBoxItem Content="Office 2003" Selected="officeVersion_NotOtherSelected"/>
                <ComboBoxItem Content="N/A" Selected="officeVersion_NotOtherSelected"/>
                <ComboBoxItem Content="Other" Selected="officeVersion_OtherSelected"/>
            </ComboBox>
            <TextBox x:Name="officeVersion_TextBox" Grid.Column="2" HorizontalAlignment="Stretch" Height="23" Margin="10,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="auto" IsEnabled="False"/>
            <Label x:Name="officeVersionArchitecture_Label" Grid.Column="3" Content="Architecture:" HorizontalAlignment="Stretch" Margin="10,54,0,0" VerticalAlignment="Top" Height="26"/>
            <ComboBox x:Name="officeVersionArchitecture_ComboBox" Grid.Column="4" HorizontalAlignment="Stretch" Margin="10,56,0,0" VerticalAlignment="Top" Width="auto" Height="22">
                <ComboBoxItem Content="32-bit"/>
                <ComboBoxItem Content="64-bit"/>
                <ComboBoxItem Content="N/A"/>
            </ComboBox>

            <Label x:Name="windowsVersion_Label" Grid.Column="0" Content="Windows Version:" HorizontalAlignment="Stretch" Margin="10,81,0,0" VerticalAlignment="Top" Height="26"/>
            <ComboBox x:Name="windowsVersion_ComboBox" Grid.Column="1" HorizontalAlignment="Stretch" Margin="10,83,0,0" VerticalAlignment="Top" Width="auto" Height="22">
                <ComboBoxItem Content="Windows 10" Selected="windowsVersion_NotOtherSelected"/>
                <ComboBoxItem Content="Windows 8.1" Selected="windowsVersion_NotOtherSelected"/>
                <ComboBoxItem Content="Windows 8" Selected="windowsVersion_NotOtherSelected"/>
                <ComboBoxItem Content="Windows 7" Selected="windowsVersion_NotOtherSelected"/>
                <ComboBoxItem Content="Windows Vista" Selected="windowsVersion_NotOtherSelected"/>
                <ComboBoxItem Content="Windows XP" Selected="windowsVersion_NotOtherSelected"/>
                <ComboBoxItem Content="Windows Server 2012" Selected="windowsVersion_NotOtherSelected"/>
                <ComboBoxItem Content="Windows Server 2008 R2" Selected="windowsVersion_NotOtherSelected"/>
                <ComboBoxItem Content="Windows Server 2008" Selected="windowsVersion_NotOtherSelected"/>
                <ComboBoxItem Content="Windows Server 2003" Selected="windowsVersion_NotOtherSelected"/>
                <ComboBoxItem Content="Windows Home Server" Selected="windowsVersion_NotOtherSelected"/>
                <ComboBoxItem Content="Windows Home Server 2011" Selected="windowsVersion_NotOtherSelected"/>
                <ComboBoxItem Content="N/A" Selected="windowsVersion_NotOtherSelected"/>
                <ComboBoxItem Content="Other" Selected="windowsVersion_OtherSelected"/>
            </ComboBox>
            <TextBox x:Name="windowsVersion_TextBox" Grid.Column="2" HorizontalAlignment="Stretch" Height="23" Margin="10,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="auto" IsEnabled="False"/>
            <Label x:Name="windowsVersionArchitecture_Label" Grid.Column="3" Content="Architecture:" HorizontalAlignment="Stretch" Margin="10,81,0,0" VerticalAlignment="Top" Height="26"/>
            <ComboBox x:Name="windowsVersionArchitecture_ComboBox" Grid.Column="4" HorizontalAlignment="Stretch" Margin="10,83,0,0" VerticalAlignment="Top" Width="auto" Height="22">
                <ComboBoxItem Content="32-bit"/>
                <ComboBoxItem Content="64-bit"/>
                <ComboBoxItem Content="N/A"/>
            </ComboBox>
        </Grid>

        <Grid x:Name="issueInformationGrid" Grid.Row="1" Grid.Column="0" Margin="0,10,10,0" HorizontalAlignment="Stretch" Height="auto">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label x:Name="issueInformation_Label" Grid.Row="0" Content="Issue Information" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="729" FontWeight="Bold"/>

            <Label x:Name="reasonForCall_Label" Grid.Row="0" Content="Reason for call:" HorizontalAlignment="Left" Margin="10,26,0,0" VerticalAlignment="Top"/>
            <Image x:Name="reasonForCallInformation_Image" Grid.Row="0" HorizontalAlignment="Left" Height="16" Margin="105,31,0,0" VerticalAlignment="Top" Width="16" Source="Information.png" MouseEnter="reasonForCallInformation_Image_MouseCheck" MouseLeave="reasonForCallInformation_Image_MouseCheck"/>
            <Border x:Name="reasonForCallInformation_Text" Grid.Row="0" Grid.RowSpan="2" Visibility="Hidden" BorderThickness="1" BorderBrush="Black" Margin="126,31,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="140" Width="325" Panel.ZIndex="99">
                <TextBlock Margin="0,0,0,0" TextWrapping="Wrap" Background="White"><Run Text="For questions and how-to queries, include:"/><LineBreak/><Run Text="- What the question is"/><LineBreak/><Run Text="- Why the customer needs this information, or what the customer's goal is"/><LineBreak/><Run/><LineBreak/><Run Text="For technical issues, include:"/><LineBreak/><Run Text="- Details of symptoms"/><LineBreak/><Run Text="- Steps to replicate the problem"/></TextBlock>
            </Border>
            <TextBox x:Name="reasonForCall_TextBox" Grid.Row="0" HorizontalAlignment="stretch" Height="Auto" Margin="10,52,0,0" TextWrapping="Wrap" VerticalAlignment="Stretch" AcceptsReturn="True" AcceptsTab="True" ScrollViewer.VerticalScrollBarVisibility="Auto"/>

            <Label x:Name="errorMessages_Label" Grid.Row="1" Content="Error messages:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
            <Image x:Name="errorMessagesInformation_Image" Grid.Row="1" HorizontalAlignment="Left" Height="16" Margin="108,15,0,0" VerticalAlignment="Top" Width="16" Source="Information.png" MouseEnter="errorMessagesInformation_Image_MouseCheck" MouseLeave="errorMessagesInformation_Image_MouseCheck"/>
            <Border x:Name="errorMessagesInformation_Text" Grid.Row="1" Visibility="Hidden" BorderThickness="1" BorderBrush="Black" Margin="129,15,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="21" Width="301" Panel.ZIndex="99">
                <TextBlock Margin="0,0,0,0" TextWrapping="Wrap" Background="White" Text="Provide an exact copy of any errors you encounter here"/>
            </Border>
            <TextBox x:Name="errorMessages_TextBox" Grid.Row="1" HorizontalAlignment="stretch" Height="Auto" Margin="10,36,0,0" TextWrapping="Wrap" VerticalAlignment="Stretch" AcceptsReturn="True" AcceptsTab="True" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        </Grid>

        <Grid x:Name="troubleshootingInformationGrid" Grid.Row="2" Grid.Column="0" Grid.RowSpan="1" Margin="0,10,10,0" HorizontalAlignment="Stretch" Height="auto">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label x:Name="troubleshootingInformation_Label" Grid.Row="0" Content="Troubleshooting Information" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="729" FontWeight="Bold"/>

            <Label x:Name="stepsTaken_Label" Grid.Row="0" Content="Steps taken:" HorizontalAlignment="Left" Margin="10,26,0,0" VerticalAlignment="Top"/>
            <Image x:Name="stepsTakenInformation_Image" Grid.Row="0" HorizontalAlignment="Left" Height="16" Margin="89,31,0,0" VerticalAlignment="Top" Width="16" Source="Information.png" MouseEnter="stepsTakenInformation_Image_MouseCheck" MouseLeave="stepsTakenInformation_Image_MouseCheck"/>
            <Border x:Name="stepsTakenInformation_Text" Grid.Row="0" Visibility="Hidden" BorderThickness="1" BorderBrush="Black" Margin="110,31,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="55" Width="325" Panel.ZIndex="99">
                <TextBlock Margin="0,0,0,0" TextWrapping="Wrap" Background="White" Text="Detail, in order of completion, the steps you took to troubleshoot the issue and what the outcome was after each step."/>
            </Border>
            <TextBox x:Name="stepsTaken_TextBox" Grid.Row="0" HorizontalAlignment="stretch" Height="Auto" Margin="10,52,0,0" TextWrapping="Wrap" VerticalAlignment="Stretch" AcceptsReturn="True" AcceptsTab="True" ScrollViewer.VerticalScrollBarVisibility="Auto"/>

            <Label x:Name="resolution_Label" Grid.Row="1" Content="Resolution:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
            <Image x:Name="resolutionInformation_Image" Grid.Row="1" HorizontalAlignment="Left" Height="16" Margin="84,15,0,0" VerticalAlignment="Top" Width="16" Source="Information.png" MouseEnter="resolutionInformation_Image_MouseCheck" MouseLeave="resolutionInformation_Image_MouseCheck"/>
            <Border x:Name="resolutionInformation_Text" Grid.Row="1" Visibility="Hidden" BorderThickness="1" BorderBrush="Black" Margin="105,15,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="38" Width="325" Panel.ZIndex="99">
                <TextBlock Margin="0,0,0,0" TextWrapping="Wrap" Background="White" Text="Explain what steps resolved the issue and what testing was performed to confirm the issue is resolved"/>
            </Border>
            <TextBox x:Name="resolution_TextBox" Grid.Row="1" HorizontalAlignment="stretch" Height="79" Margin="10,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" AcceptsReturn="True" AcceptsTab="True" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        </Grid>

        <ComboBox x:Name="windowViewStyleSelector_ComboBox" Grid.Row="3" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="72" SelectionChanged="windowViewStyleSelector_ComboBox_SelectionChanged">
            <ComboBoxItem IsSelected="True" Content="Narrow"/>
            <ComboBoxItem Content="Wide"/>
        </ComboBox>

        <Button Content="Copy to Clipboard" Grid.Row="3" HorizontalAlignment="Right" Margin="0,0,10,10" Width="115" Click="Button_Click" VerticalAlignment="Bottom" Height="22"/>
    </Grid>
</Window>
