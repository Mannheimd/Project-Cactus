                                <Label x:Name="emarketingCancellationEscalation_Platform_Label" Content="Platform:" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"
                                       ToolTip="Select which Emarketing platform is being used"/>
                                <ComboBox x:Name="emarketingCancellationEscalation_Platform_ComboBox" Margin="10,26,10,0" HorizontalAlignment="Stretch" VerticalAlignment="Top"
                                          ToolTip="Select which Emarketing platform is being used">
                                    <ComboBoxItem Content="Act! Emarketing"/>
                                    <ComboBoxItem Content="Swiftpage Emarketing"/>
                                </ComboBox>
                            </Grid>

                            <Grid x:Name="emarketingCancellationEscalation_Issue_Grid" Grid.Row="8" Margin="0,0,0,0" HorizontalAlignment="Stretch" Height="auto">
                                <Label x:Name="emarketingCancellationEscalation_Issue_Label" Content="Description of issue:" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"
                                       ToolTip="Enter a detailed description of the customer's issue"/>
                                <TextBox x:Name="emarketingCancellationEscalation_Issue_TextBox" HorizontalAlignment="stretch" Height="auto" Margin="10,26,10,5" TextWrapping="Wrap" VerticalAlignment="Top" AcceptsReturn="True" ScrollViewer.VerticalScrollBarVisibility="Auto"
                                         ToolTip="Enter a detailed description of the customer's issue"
                                         Style="{StaticResource WatermarkedTextBox}"
                                         Tag="Description of customer's issue"/>
                            </Grid>

                            <Grid x:Name="emarketingCancellationEscalation_ReasonForEscalation_Grid" Grid.Row="9" Margin="0,0,0,0" HorizontalAlignment="Stretch" Height="auto">
                                <Label x:Name="emarketingCancellationEscalation_ReasonForEscalation_Label" Content="Reason for cancellation request:" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"
                                       ToolTip="Enter some information on why this case is being escalated and what actions are being requested"/>
                                <TextBox x:Name="emarketingCancellationEscalation_ReasonForEscalation_TextBox" HorizontalAlignment="stretch" Height="auto" Margin="10,26,10,5" TextWrapping="Wrap" VerticalAlignment="Top" AcceptsReturn="True" ScrollViewer.VerticalScrollBarVisibility="Auto"
                                         ToolTip="Enter some information on why this case is being escalated and what actions are being requested"
                                         Style="{StaticResource WatermarkedTextBox}"
                                         Tag="Reason that case is being escalated"/>
                            </Grid>
                        </Grid>
                    </Grid>

                    <Grid x:Name="transfer_Grid" Grid.Row="4" Visibility="Collapsed" Margin="0,0,0,0" HorizontalAlignment="Stretch" Height="auto">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <Grid x:Name="transferDepartment_Grid" Grid.Row="0" Margin="0,0,0,0" HorizontalAlignment="Stretch" Height="auto">
                            <Label x:Name="transferDepartment_Label" Content="Department:" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"
                                   ToolTip="Enter the department that you are transferring this call to"/>
                            <TextBox x:Name="transferDepartment_TextBox" HorizontalAlignment="stretch" Height="auto" Margin="10,26,10,5" TextWrapping="Wrap" VerticalAlignment="Top" AcceptsReturn="True" ScrollViewer.VerticalScrollBarVisibility="Auto"
                                     ToolTip="Enter the department that you are transferring this call to"
                                     Style="{StaticResource WatermarkedTextBox}"
                                     Tag="Department receiving transfer"/>
                        </Grid>

                        <Grid x:Name="transferPerson_Grid" Grid.Row="1" Margin="0,0,0,0" HorizontalAlignment="Stretch" Height="auto">
                            <Label x:Name="transferPerson_Label" Content="Person:" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"
                                   ToolTip="Enter the name of the person that you are transferring this call to"/>
                            <TextBox x:Name="transferPerson_TextBox" HorizontalAlignment="stretch" Height="auto" Margin="10,26,10,5" TextWrapping="Wrap" VerticalAlignment="Top" AcceptsReturn="True" ScrollViewer.VerticalScrollBarVisibility="Auto"
                                     ToolTip="Enter the name of the person that you are transferring this call to"
                                     Style="{StaticResource WatermarkedTextBox}"
                                     Tag="Person receiving transfer"/>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </ScrollViewer>
        <Grid Grid.Row="4" x:Name="ticketLoggingButtonsBottom" VerticalAlignment="Bottom" Height="43">
            <Rectangle VerticalAlignment="Top" HorizontalAlignment="Stretch" Height="1" Fill="#FFFE5000"/>
            <Button x:Name="endTimer_Button" Content="End Timer" IsEnabled="False" Margin="10,0,0,10" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="70" Click="endTimerButton_Click"
                    ToolTip="Ends the call duration timer"/>
            <Label x:Name="callDuration_Label" Content="00:00:00" Margin="85,0,0,8" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
            <Button x:Name="copyToClipboard_Button" Content="Copy to Clipboard" HorizontalAlignment="Right" Margin="0,0,10,10" Width="115" Click="copyToClipboard_Button_Click" VerticalAlignment="Bottom" Height="22"
                    ToolTip="Copies your notes to the clipboard ready to be pasted into your infor ticket"/>
        </Grid>
    </Grid>
</Window>
